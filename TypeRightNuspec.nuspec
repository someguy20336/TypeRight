<?xml version="1.0"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
	<metadata>
		<!--Production: TypeRight, Debug: TypeRightDebug-->
		<id>$id$</id>
		<version>$vers$</version>
		<title>TypeRight</title>
		<authors>Dave W</authors>
		<owners>Dave W</owners>
		<requireLicenseAcceptance>false</requireLicenseAcceptance>
		<description>
			A simple tool designed to make it easy to autogenerate TypeScript files from C# classes and MVC actions.
			This package adds a build task to create the scripts.  For the best experience, also use the VS extension
			with the same name.
		</description>
		<releaseNotes>See the github page for most recent release notes</releaseNotes>
		<copyright>Copyright 2019-2021</copyright>
		<projectUrl>https://github.com/someguy20336/TypeRight</projectUrl>
		<icon>images\TypeRight64x64.png	</icon>
		<tags>TypeScript Generator MVC C# classes</tags>
		<license type="expression">MIT</license>
		<readme>docs\PackageReadme.md</readme>

		<dependencies>
			<group targetFramework="net6.0" />
			<group targetFramework="net7.0" />
		</dependencies>
	</metadata>
	<files>
		<!-- Attributes reference -->
		<file src=".\src\TypeRight.Attributes\bin\Release\netstandard2.0\TypeRight.Attributes.dll" target="lib\net6.0" />
		<file src=".\src\TypeRight.Attributes\bin\Release\netstandard2.0\TypeRight.Attributes.xml" target="lib\net6.0" />
		<file src=".\src\TypeRight.Attributes\bin\Release\netstandard2.0\TypeRight.Attributes.dll" target="lib\net7.0" />
		<file src=".\src\TypeRight.Attributes\bin\Release\netstandard2.0\TypeRight.Attributes.xml" target="lib\net7.0" />
		
		<!-- Build tool -->
		<file src=".\src\TypeRight\TypeRight.targets" target="build\net6.0\$id$.targets" />
		<file src=".\src\TypeRight\TypeRight.targets" target="build\net7.0\$id$.targets" />
		<file src=".\src\TypeRight\bin\Release\net6.0\win-x86\publish\*.*" target="tools\net6.0" />
		<file src=".\src\TypeRight\bin\Release\net7.0\win-x86\publish\*.*" target="tools\net7.0" />
		
		<!-- Adapter -->
		<file src=".\src\TypeRight.Workspaces.VsixAdapter\bin\Release\netstandard2.0\*.dll" target="tools\adapter" />
		<file src=".\src\TypeRight.Workspaces.VsixAdapter\bin\Release\netstandard2.0\*.pdb" target="tools\adapter" />
		
		<!-- Content -->
		<file src=".\Icons\TypeRight64x64.png" target="images\"></file>
		
        <file src=".\docs\PackageReadme.md" target="docs\" />

	</files>
</package>